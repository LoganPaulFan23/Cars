{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                //"${file}",
                "${workspaceRoot}/src/main.cpp",
                "-o",
                //"${fileDirname}/${fileBasenameNoExtension}"
                "${workspaceRoot}/build/main"
            ],
            "options": {
                //"cwd": "${fileDirname}"
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Used to compile C++"
        }
    ],
    "version": "2.0.0"
}