{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "../build/${fileBasenameNoExtension}"
                //"${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "../build"
                //"cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Used to compile C++"
        }
    ],
    "version": "2.0.0"
}